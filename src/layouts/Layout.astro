---
import NavBar from '@/components/NavBar.astro';
import Footer from '@/components/Footer.astro';
import Wp from "@/components/icons/Wp.astro"

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/avif" href="/logo_b.avif" />
		<title>{title}</title>

		<link rel="stylesheet" href="./css/styles.css">
	</head>
	<body>
		<NavBar 
		img="./img/logo.webp"/>
		<slot />
		<Footer 
		img='./img/logo.webp'/>
		<div>
			<Wp />
		</div>
	</body>
</html>

<style>
	:root{
		scroll-behavior: smooth;
	}
</style>
