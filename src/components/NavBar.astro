---
interface Props {
  img: string;
}

const { img } = Astro.props
---
<header class="relative" id="Inicio">
  <div class="bg-[#ffffffc9] mx-auto right-0 left-0 z-10 p-3 sm:px-6 lg:px-8 fixed transition-all duration-300 shadow-sm" id="navbar">
    <div class="flex h-16 items-center justify-between">
      <div class="md:flex md:items-center md:gap-12">
        <a class="block text-teal-600" href="/">
          <span class="sr-only">Home</span>
          <img 
          src={img} 
          alt="Logo NaturArte"
          class="w-28"
          >
        </a>
      </div>

      <div class="hidden md:block">
        <nav aria-label="Global">
          <ul class="flex items-center gap-8 text-md">
            <li>
              <a class="text-primary transition hover:text-black/75 font-bold text-[20px]" href="/">Inicio</a>
            </li>

            <li>
              <a class="text-primary transition hover:text-black/75 font-bold text-[20px]" href="#Servicios">Servicios</a>
            </li>

            <li>
              <a class="text-primary transition hover:text-black/75 font-bold text-[20px]" href="#Productos">Productos</a>
            </li>

            <li>
              <a class="text-primary transition hover:text-black/75 font-bold text-[20px]" href="#Destacado">Destacado</a>
            </li>

            <li>
              <a class="text-primary transition hover:text-black/75 font-bold text-[20px]" href="#Nosotros">Nosotros</a>
            </li>

            <li>
              <a class="text-primary transition hover:text-black/75 font-bold text-[20px]" href="#Contactenos">Contactenos</a>
            </li>

          </ul>
        </nav>
      </div>

        
      <div class="block md:hidden">
        <button class="rounded bg-gray-100 p-2 text-gray-600 transition hover:text-gray-600/75">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      
    </div>
  </div>
</header>

<script>

  let prevScrollpos = window.pageYOffset;
  
  window.onscroll = function () {
    let currentScrollPos = window.pageYOffset;
    let navbar = document.getElementById("navbar");
  
    if(navbar === null) throw new Error("error: menu")
  
    if (prevScrollpos > currentScrollPos) {
      navbar.style.top = "0px";
    } else {
      navbar.style.top = `-${navbar.clientHeight}px`;
    }
  
    prevScrollpos = currentScrollPos;
  };
  
  </script>